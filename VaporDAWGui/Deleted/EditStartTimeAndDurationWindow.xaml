<local:StandardDialogWindow x:Class="VaporDAWGui.EditStartTimeAndDurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaporDAWGui"
        mc:Ignorable="d"
        Style="{StaticResource StandardDialogStyle}" 
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        WindowStartupLocation="CenterScreen"
        Title="Edit Start Time And Duration">
    <StackPanel Orientation="Vertical">
        <Label Content="Start time" HorizontalAlignment="Left" />
        <TextBox Name="startTimeTextBox"  />
        <Label Content="Duration" HorizontalAlignment="Left"  />
        <TextBox Name="durationTextBox"/>
    </StackPanel>
</local:StandardDialogWindow>
